{
    "name": "daniel-cintra/modular-blog",
    "description": "A Blog Module for a Modular Application.",
    "keywords": [
        "modular",
        "laravel",
        "blog",
        "blog module"
    ],
    "homepage": "https://docs.ismodular.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Cintra",
            "email": "danic10@gmail.com"
        }
    ],
    "require": {
        "daniel-cintra/modular": "^0.3.0",
        "cviebrock/eloquent-sluggable": "^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "orchestra/testbench": "9.x-dev",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Modular\\Blog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Modular\\Blog\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Modular\\Blog\\BlogServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
